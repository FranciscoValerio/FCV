<Page
    x:Class="ToDoApp.Paginas.NovaTarefaPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ToDoApp.Paginas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Margin="10">
            <TextBlock Text="Código" Name="txbCodigo" />
            <TextBox Name="txtCodigo" IsReadOnly="True"/>
            <TextBlock Text="Título" />
            <TextBox Name="txtTitulo" PlaceholderText="Digite o título" />
            <TextBlock Text="Descrição" />
            <TextBox Name="txtDescricao" PlaceholderText="Digite a descrição" TextWrapping="Wrap" Height="150"/>
            <TextBlock Text="Usuário" />
            <TextBox Name="txtUserName"  IsReadOnly="True" />            
            <TextBlock Text="Data" />
            <DatePicker Name="dtpData" />
            <CheckBox Name="ckbConcluido" Content="Concluído" />
            <Button Name="btnGravar" Content="Gravar" FontSize="30" Margin="0,20,0,0" HorizontalAlignment="Center"
                    Click="btnGravar_Click"/>
        </StackPanel>
    </Grid>
</Page>